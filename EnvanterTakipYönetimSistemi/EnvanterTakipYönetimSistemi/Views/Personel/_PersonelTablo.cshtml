@using EnvanterTakipYönetimSistemi.ViewModels
@model PersonelViewModel

<!doctype html>
<html lang="tr">
<head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Content/Table/css/bootstrap-table.min.css" rel="stylesheet" />
    <link href="~/Content/Table/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

</head>


<body>



    <div id="toolbar" class="select">
        <div class="form-inline" role="form">
            <div id="toolbar">
                <select class="form-control">
                    <option value="all">Tümünü Dışa Aktar</option>
                    <option value="selected">Seçimi Dışa Aktar</option>
                </select>
            </div>

            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#exampleModal">

                <img src="~/Content/svg/person-plus-fill.svg" />
            </button>
            <button id="kontrol" class="btn btn-default" onclick="selectMe()">
                <img src="~/Content/svg/person-check-fill.svg" />
            </button>
            <button id="kontrol" class="btn btn-default" onclick="selectMe()" data-toggle="modal" data-target="#exampleModal">


                <img src="~/Content/svg/person-dash-fill.svg" />
            </button>
        </div>
    </div>

    <div id="wrapper">
        <table id="table"
               data-toggle="table"
               data-toolbar="#toolbar"
               data-search="true"
               data-filter-control="true"
               data-show-export="true"
               data-single-select="false"
               data-click-to-select="true"
               data-maintain-meta-data="false"
               data-show-pagination-switch="true"
               data-pagination="true"
               data-show-columns="true"
               data-show-footer="true">

            <thead class="text-center">
                <tr>
                    <th data-field="state" data-checkbox="true"></th>
                    <th data-field="id" data-filter-control="select" data-sortable="true">ID</th>
                    <th data-field="ad" data-filter-control="input" data-sortable="true">Ad</th>
                    <th data-field="soyad" data-filter-control="input" data-sortable="true">Soyad</th>
                    <th data-field="sube" data-filter-control="select" data-sortable="true">Şube</th>
                    <th data-field="eposta" data-filter-control="input" data-sortable="false">Eposta</th>
                    <th data-field="rol" data-filter-control="select" data-sortable="false">Rol</th>
                    <th data-field="giristarih" data-filter-control="select" data-sortable="true">Son Giriş Tarihi</th>
                    <th data-field="durum" data-filter-control="select" data-sortable="false">Durum</th>
                    <th data-field="subeid" data-visible="false"></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var envanter in Model.PersonelList)
                {
                <tr>
                    <td class="bs-checkbox ">
                        <input name="btSelectItem" type="checkbox">
                    </td>
                    <td>@envanter.PersonelID</td>
                    <td>@envanter.PersonelAd</td>
                    <td>@envanter.PersonelSoyad</td>
                    <td>@envanter.PersonelSube</td>
                    <td>@envanter.PersonelEposta</td>

                    <td>@envanter.PersonelRol</td>
                    <td>@envanter.PersonelSonGirisTarih</td>
                    <td>@envanter.PersonelKayit</td>

                    <td>@envanter.PerSubeID</td>


                </tr>

                }
            </tbody>
        </table>
    </div>
    <script type="text/javascript">

        function selectMe() {
            //$('#table').bootstrapTable("checkBy", {
            //    field: 'id',
            //    values: ["30"]
            //});
            var _id = getIdSelections(1)
            var _ad= getIdSelections(2)
            var _soyad = getIdSelections(3)
            var _subeid = getIdSelections(4)
            var _eposta = getIdSelections(5)
            var _rol = getIdSelections(6)
            

            if (_id.length >= 1) {
                $('#exampleModal').modal('show');

                $("#PersonelID").val(_id[0]);
                $("#PersonelAd").val(_ad[0]);
                $("#PersonelSoyad").val(_soyad[0]);
                $("#PerSubeID").val(_subeid[0]);
                $("#PersonelEposta").val(_eposta[0]);
                $("#PersonelRol").val(_rol[0]);
               
            }
        }


        function getIdSelections(i) { // table seçili checkbox'a göre id
            switch (i) {
                case 1:
                    return $.map($table.bootstrapTable('getSelections'), ({ id }) => id);
                    break;
                case 2:
                    return $.map($table.bootstrapTable('getSelections'), ({ ad }) => ad);
                    break;
                case 3:
                    return $.map($table.bootstrapTable('getSelections'), ({ soyad }) => soyad);
                    break;
                case 4:

                    return $.map($table.bootstrapTable('getSelections'), ({ subeid }) => subeid);
                    break;
                case 5:

                    return $.map($table.bootstrapTable('getSelections'), ({ eposta }) => eposta);
                    break;
                case 6:

                    return $.map($table.bootstrapTable('getSelections'), ({ rol }) => rol);
                    break;
            }
        }



    </script>

    <script src="~/Content/Table/javaS/jquery-3.2.1.slim.min.js"></script>
    <script src="~/Content/Table/javaS/jquery.min.js"></script>
    <script src="~/Content/Table/javaS/popper.min.js"></script>
    <script src="~/Content/Table/javaS/bootstrap.min.js"></script>



    <script src="~/Content/Table/javaS/tableExport.min.js"></script>
    <script src="~/Content/Table/javaS/jspdf.min.js"></script>
    <script src="~/Content/Table/javaS/jspdf.plugin.autotable.js"></script>
    <script src="~/Content/Table/javaS/bootstrap-table.min.js"></script>
    <script src="~/Content/Table/javaS/bootstrap-table-export.min.js"></script>
    <script src="~/Content/Table/javaS/seciliExscript.js"></script>
    <script src="~/Content/Table/javaS/bootstrap-table-filter-control.min.js"></script>










</body>


</html>